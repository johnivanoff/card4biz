<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, :placeholder =>'First Name' %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, :placeholder =>'Last Name' %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :placeholder =>'Title' %>
  </div>
  <div class="field">
    <%= f.label :work %><br />
    <%= f.telephone_field :work, :placeholder =>'Work' %>
  </div>
  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.telephone_field :mobile, :placeholder =>'Mobile' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :placeholder =>'Email',  :autocapitalize => 'off' %>
  </div>
  
  <div class="field">
    <%= f.label :account_id %><br />
    <%= f.text_field :account_id, :placeholder =>'Account Name' %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
